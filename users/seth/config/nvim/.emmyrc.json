{
  "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
  "format": {
    "externalTool": {
      "program": "stylua",
      "args": [
        "-",
        "--stdin-filepath",
        "--indent-width=2",
        "--indent-type",
        "--use-spaces",
        "${file}"
      ],
      "timeout": 5000
    }
  },
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua",
      "?/lua/?.lua",
      "?/lua/?/init.lua"
    ]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "$DOTS/config/hammerspoon",
      "$DOTS/config/hammerspoon/annotations",
      "$DOTS/config/nvim",
      "$DOTS/config/mvim",
      "$DOTS/config/nvim_min",
      "$HOME/.local/share/nvim/lazy"
    ],
    "ignoreGlobs": ["**/*_spec.lua"]
  },
  "diagnostics": {
    "disable": ["unnecessary-if", "undefined-global"]
  },
  "codeAction": {
    "insertSpace": true
  },
  "strict": {
    "typeCall": true,
    "arrayIndex": true
  }
}
